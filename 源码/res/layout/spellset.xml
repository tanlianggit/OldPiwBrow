<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
       <ScrollView
           android:id="@+id/scrollView1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" >

           <LinearLayout
               android:id="@+id/linearLayout2"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical" >

                 <TextView
               android:id="@+id/textView1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="难易程度："
               android:textSize="18sp" android:textColor="#ffffff"/>

               <RadioGroup
                   android:id="@+id/radioGroup1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" >

                   <RadioButton
                       android:id="@+id/rdo3"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:checked="true"
                       android:text="容易（3*3）" />

                   <RadioButton
                       android:id="@+id/rdo4"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="一般（4*4）" />

                   <RadioButton
                       android:id="@+id/rdo5"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="较难（5*5）" />

                   <RadioButton
                       android:id="@+id/rdo6"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="很难（6*6）" />
               </RadioGroup>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="操作模式：" android:textSize="18sp" android:textColor="#ffffff"/>
    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/rdoEasy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="随意模式（可以交换任意两张图片）" />

        <RadioButton
            android:id="@+id/rdoDif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="相邻模式（只能交换相邻的两张图片）" />
    </RadioGroup>       
                  <CheckBox
            android:id="@+id/chkMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.53"
            android:text="游戏时播放音乐" android:checked="true"/>   
           </LinearLayout>

 

       </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginTop="5dp">

        <Button
            android:id="@+id/btnOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.53"
            android:text="确定" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.53"
            android:text="取消" />

    </LinearLayout>

</LinearLayout>