<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:background="#aaaaaa">

    <LinearLayout
        android:id="@+id/llMenuCopy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" android:layout_marginTop="6dip" android:layout_marginBottom="6dip">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_marginLeft="20dip"
            android:src="@drawable/copy" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拷贝" android:layout_marginLeft="10dip" android:layout_marginRight="20dip" android:textColor="#ffffff"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llMenuCut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dip"
        android:layout_marginTop="6dip"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_marginLeft="20dip"
            android:src="@drawable/cut" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剪切" android:layout_marginLeft="10dip" android:layout_marginRight="20dip" android:textColor="#ffffff"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llMenuPase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" android:layout_marginTop="6dip" android:layout_marginBottom="6dip">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:src="@drawable/paste" android:layout_marginLeft="20dip" android:layout_marginTop="5dip" android:layout_marginBottom="5dip"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="粘贴" android:layout_marginLeft="10dip" android:layout_marginRight="20dip" android:textColor="#ffffff"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llMenuEncrypt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dip"
        android:layout_marginTop="6dip"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_marginLeft="20dip"
            android:src="@drawable/encrypt" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加密" android:layout_marginLeft="10dip" android:layout_marginRight="20dip" android:textColor="#ffffff"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llMenuDecrypt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dip"
        android:gravity="center_vertical" android:layout_marginBottom="6dip">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_marginLeft="20dip"
            android:src="@drawable/decrypt" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="解密" android:layout_marginLeft="10dip" android:layout_marginRight="20dip" android:textColor="#ffffff"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llHouse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dip"
        android:layout_marginTop="6dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:src="@drawable/house" android:layout_marginLeft="20dip"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收藏" android:layout_marginLeft="10dip" android:layout_marginRight="20dip" android:textColor="#ffffff"/>

    </LinearLayout>

</LinearLayout>