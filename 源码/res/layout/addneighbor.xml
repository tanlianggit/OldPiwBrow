<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请参考登录页面的使用说明"
        android:textAppearance="?android:attr/textAppearanceMedium" android:layout_marginBottom="10dip" android:layout_marginLeft="15dip"/>

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginLeft="5dip" android:layout_marginRight="10dip">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:visibility="gone">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="域名："
                
                android:textAppearance="?android:attr/textAppearanceSmall" android:layout_marginLeft="10dip" android:textColor="#ffffff"/>

            <EditText
                android:id="@+id/txtDomainName"
                android:layout_width="180dip"
                android:layout_height="wrap_content" style="@style/add_neighbor_texteditor">

                <requestFocus />
            </EditText>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务器："
                android:textAppearance="?android:attr/textAppearanceSmall" android:layout_marginLeft="10dip" android:textColor="#ffffff"/>

            <EditText
                android:id="@+id/txtServerName"
                android:layout_width="180dip"
                android:layout_height="wrap_content" style="@style/add_neighbor_texteditor" android:background="@drawable/radiusangle" android:layout_marginBottom="5dip"/>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名："
                android:textAppearance="?android:attr/textAppearanceSmall" android:layout_marginLeft="10dip" android:textColor="#ffffff"/>

            <EditText
                android:id="@+id/txtLoginId"
                android:layout_width="180dip"
                android:layout_height="wrap_content" style="@style/add_neighbor_texteditor" android:background="@drawable/radiusangle" android:layout_marginBottom="5dp"/>

        </TableRow>
        <TableRow
         android:id="@+id/tableRow1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码："
                android:textAppearance="?android:attr/textAppearanceSmall" android:layout_marginLeft="10dip" android:textColor="#ffffff"/>

            <EditText
                android:id="@+id/txtPassword"
                android:layout_width="180dip"
                android:layout_height="wrap_content"
                android:inputType="textPassword" style="@style/add_neighbor_texteditor" android:background="@drawable/radiusangle" android:layout_marginBottom="5dip"/>

         </TableRow>
        <TableRow
         android:id="@+id/tableRow1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" android:visibility="gone">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <CheckBox
                android:id="@+id/chkAnonymous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是否匿名"/>

         </TableRow>
         
        <TableRow
         android:id="@+id/tableRow1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重命名："
                android:textAppearance="?android:attr/textAppearanceSmall" android:layout_marginLeft="10dip" android:textColor="#ffffff"/>

            <EditText
                android:id="@+id/txtNeighborName"
                android:layout_width="180dip"
                android:layout_height="wrap_content" style="@style/add_neighbor_texteditor" android:background="@drawable/radiusangle"/>

         </TableRow>        
    </TableLayout>

</LinearLayout>