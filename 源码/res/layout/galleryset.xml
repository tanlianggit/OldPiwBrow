<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:paddingTop="20dip" android:paddingLeft="20dip" android:scrollbars="vertical">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearLayout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="壁纸偏移（百分比）："
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/txtOff"
                    android:layout_width="50dip"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="0" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="锁屏时间间隔（分钟）："
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/txtLock"
                    android:layout_width="50dip"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="5" />

            </LinearLayout>

               <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="动画设置：" android:textSize="20sp" android:textColor="#ffffff" android:textStyle="bold" android:textAppearance="?android:attr/textAppearanceMedium" />


    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="顺序播放间隔（秒）："
            android:textAppearance="?android:attr/textAppearanceMedium" />


        <EditText
            android:id="@+id/txtSeq"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="1" >

            <requestFocus />
        </EditText>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="随即播放间隔（秒）："
            android:textAppearance="?android:attr/textAppearanceMedium" />



        <EditText
            android:id="@+id/txtRan"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="1" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="缩放动画    缩放倍数："
            android:textAppearance="?android:attr/textAppearanceMedium" />



        <EditText
            android:id="@+id/txtTimer"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="3" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="缩放持续时间（秒）："
            android:textAppearance="?android:attr/textAppearanceMedium" />



        <EditText
            android:id="@+id/txtDura"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="2" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="拼图设置："
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" android:layout_marginTop="10dip"/>

    <LinearLayout
        android:id="@+id/llSpell"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" android:layout_marginTop="5dip">

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="难易程度："
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/rdo3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="容易（3*3）" />

            <RadioButton
                android:id="@+id/rdo4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一般（4*4）" />

            <RadioButton
                android:id="@+id/rdo5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="较难（5*5）" />

            <RadioButton
                android:id="@+id/rdo6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="很难（6*6）" />
        </RadioGroup>

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="操作模式："
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/rdoEasy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="随意模式（可以交换任意两张图片）" />

            <RadioButton
                android:id="@+id/rdoDif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="相邻模式（只能交换相邻的两张图片）" />
        </RadioGroup>

        <CheckBox
            android:id="@+id/chkMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.53"
            android:checked="true"
            android:text="游戏时播放音乐" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginTop="30dip">



        <Button
            android:id="@+id/btnSet"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="设置" />


        <Button
            android:id="@+id/btnCancel"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dip"
            android:text="取消" />

    </RelativeLayout>
            
        </LinearLayout>
    </ScrollView>

 
</LinearLayout>